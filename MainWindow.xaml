<Window x:Class="LibraryManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Filter Panel -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0, 10">
            <Label Content="Автор:" VerticalAlignment="Center" Margin="10, 0, 0, 0"/>
            <ComboBox x:Name="AuthorFilterComboBox" 
                      Width="100"
                      DisplayMemberPath="FullName" />

            <Label Content="Жанр:" VerticalAlignment="Center" Margin="10, 0, 0, 0" />
            <ComboBox x:Name="GenreFilterComboBox" 
                      Width="100"
                      DisplayMemberPath="Name" />

            <Label Content="Название:" VerticalAlignment="Center" Margin="15,0,0,0"/>
            <TextBox x:Name="TitleSearchTextBox" Width="180" Margin="5,0"/>

            <!-- Кнопки управления фильтром -->
            <Button Content="Применить" 
                    Click="ApplyFilterButton_Click" 
                    Width="90" Margin="10,0,5,0" 
                    Padding="5"/>

            <Button Content="Сбросить" 
                    Click="ResetFilterButton_Click" 
                    Width="90" Margin="5,0" 
                    Padding="5"/>
        </StackPanel>

        <!-- DataGrid for Books -->
        <DataGrid x:Name="BooksDataGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" />
                <DataGridTextColumn Header="Author" Binding="{Binding Author.FullName}" />
                <DataGridTextColumn Header="Publish Year" Binding="{Binding PublishYear}" />
                <DataGridTextColumn Header="ISBN" Binding="{Binding ISBN}" />
                <DataGridTextColumn Header="Genre" Binding="{Binding Genre.Name}" />
                <DataGridTextColumn Header="In Stock" Binding="{Binding QuantityInStock}" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Margin="10">
            <Button Content="Add Book" Click="AddBookButton_Click" Margin="5" />
            <Button Content="Edit Book" Click="EditBookButton_Click" Margin="5" />
            <Button Content="Delete Book" Click="DeleteBookButton_Click" Margin="5" />
            <Button Content="Manage Authors" Click="ManageAuthorsButton_Click" Margin="5" />
            <Button Content="Manage Genres" Click="ManageGenresButton_Click" Margin="5" />
        </StackPanel>
    </Grid>
</Window>